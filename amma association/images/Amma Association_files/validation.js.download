$('.lettersOnly').bind("propertychange change keyup paste input keypress", function(e){
    var keycode = e.charCode ? e.charCode : e.keyCode     
    if ((keycode > 64 && keycode < 91) || (keycode > 96 && keycode < 123) || keycode == 32 )  { 
        return true; 
    }else{
        return false;
    }
});

